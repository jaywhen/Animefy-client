/**index.wxss**/
.container {
  display: flex;
  justify-content: space-around;
}

.img-frame {
  width: 240px;
  height: 280px;
  padding-left: 10px;
  padding-right: 10px;
  padding-top: 10px;
  padding-bottom: 30px;

  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;

  background: #ffffff;
  border: 1px solid #FFFFFF;
  box-sizing: border-box;
  box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
  border-radius: 0px;
}

.img {
  height: 100%;
  width: 100%;
}

.action-bar {
  width: 100%;
  height: 32px;
  display: flex;
  justify-content: flex-end
}

.button-gan-outer {
  display: flex;
  justify-content: center;
  margin-top: 1rem;
  width: 90px;
  height: 90px;

  background: #FFFFFF;
  border: 1px solid #FFFFFF;
  border-radius: 50%;
  box-sizing: border-box;
  box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
}

.button-gan-inner {
  width: 80px;
  height: 80px;
  align-self: center;
  border-radius: 50%;
  background: #eeeeee;
}

.about-desc {
  color: #7c7c7c;
  font-weight: 600;
  line-height: 30px;
}

.about-item {
  font-style: italic;
  font-size: 11px;
  text-decoration: underline;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.about-copyright {
  font-size: 10px;
  color: #979797;
}

.radio-box {
  margin-top: 2rem;
  width: 240px;
  height: 50px;
  box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
  border-radius: 10px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #2b2b2b;
}

.radio {
  width: 100px;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
}

.checked {
  border: #7c7c7c solid 1px;
  border-radius: 10px;
}
