/**index.wxss**/
.container {
  display: flex;
  justify-content: center;
}

.img-frame {
  width: 200px;
  height: 240px;
  padding-left: 10px;
  padding-right: 10px;
  padding-top: 10px;
  padding-bottom: 30px;

  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;

  background: #ffffff;
  border: 1px solid #FFFFFF;
  box-sizing: border-box;
  box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
  border-radius: 0px;
}

.img {
  height: 100%;
  width: 100%;
}

.action-bar {
  width: 100%;
  height: 32px;
  display: flex;
  justify-content: flex-end
}

.more-action {
  width: 32px;
  height: 32px;
}

.button-gan-outer {
  display: flex;
  justify-content: center;
  margin-top: 3em;
  width: 90px;
  height: 90px;

  background: #FFFFFF;
  border: 1px solid #FFFFFF;
  border-radius: 50%;
  box-sizing: border-box;
  box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
}

.button-gan-inner {
  width: 80px;
  height: 80px;
  align-self: center;
  border-radius: 50%;
  background: #eeeeee;
}
